---
import FontLoader from "@/components/FontLoader.astro";
import VolumeButton from "@/components/VolumeButton.tsx";
import type { EventLayoutProps } from "@/types";
import { getEventImagePath } from "@/utils/images";
import "../styles/global.css";
import "../styles/theme.css";

type Props = EventLayoutProps;

const { eventData } = Astro.props;
const coverImagePath = getEventImagePath(eventData.slug, "cover.jpg");

// Detectar qué página está activa
const currentPath = Astro.url.pathname;
const isAlbumPage = currentPath.includes('/album');

// Construir URLs para meta tags
const site = 'https://edlazdev.github.io';
const base = '/birthday-app';
const basePath = base.endsWith("/") ? base : `${base}/`;
// Construir URL completa de la página actual
const pathWithoutBase = currentPath.replace(base, '').replace(/^\//, '');
const fullUrl = `${site}${basePath}${pathWithoutBase}`;
// La imagen cover.jpg está en public/assets/events/${slug}/cover.jpg
// Construir URL absoluta de la imagen
const ogImageUrl = `${site}${basePath}assets/events/${eventData.slug}/cover.jpg`;

// Generar título y descripción para la vista previa
const pageTitle = isAlbumPage 
  ? `Álbum - ${eventData.celebrant}`
  : `${eventData.celebrant} - ${eventData.title} ${eventData.age} ${eventData.afterAge || ''}`;

const pageDescription = isAlbumPage
  ? `Mira las fotos del álbum de ${eventData.celebrant}`
  : `${eventData.tagline || `Invitación para celebrar ${eventData.title.toLowerCase()} ${eventData.age} ${eventData.afterAge || ''} de ${eventData.celebrant}`}. ${eventData.date} a las ${eventData.time}. ${eventData.address}`;

// Configurar video de YouTube según la página
let videoConfig: { youtubeId: string; muted: boolean; loop: boolean; start?: number } | null = null;

if (eventData.backgroundVideo) {
  if (isAlbumPage && eventData.backgroundVideo.album) {
    // Video específico para la página del álbum
    videoConfig = {
      youtubeId: eventData.backgroundVideo.album.youtubeId,
      muted: eventData.backgroundVideo.album.muted !== false,
      loop: eventData.backgroundVideo.album.loop !== false,
      start: eventData.backgroundVideo.album.start,
    };
  } else if (!isAlbumPage && eventData.backgroundVideo.invitation) {
    // Video específico para la página de invitación
    videoConfig = {
      youtubeId: eventData.backgroundVideo.invitation.youtubeId,
      muted: eventData.backgroundVideo.invitation.muted !== false,
      loop: eventData.backgroundVideo.invitation.loop !== false,
      start: eventData.backgroundVideo.invitation.start,
    };
  } else if (eventData.backgroundVideo.youtubeId) {
    // Video único para todas las páginas (compatibilidad)
    videoConfig = {
      youtubeId: eventData.backgroundVideo.youtubeId,
      muted: eventData.backgroundVideo.muted !== false,
      loop: eventData.backgroundVideo.loop !== false,
      start: eventData.backgroundVideo.start,
    };
  }
}

// Construir URL de YouTube embed con parámetros
let youtubeUrl = "";
if (videoConfig) {
  const params = new URLSearchParams({
    autoplay: "1",
    mute: videoConfig.muted ? "1" : "0",
    loop: videoConfig.loop ? "1" : "0",
    playlist: videoConfig.loop ? videoConfig.youtubeId : "",
    controls: "0",
    showinfo: "0",
    rel: "0",
    modestbranding: "1",
    playsinline: "1",
    enablejsapi: "1",
  });
  
  // Agregar start si está definido
  if (videoConfig.start !== undefined) {
    params.set("start", videoConfig.start.toString());
  }
  
  youtubeUrl = `https://www.youtube.com/embed/${videoConfig.youtubeId}?${params.toString()}`;
}
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    {/* Meta tags básicos */}
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    
    {/* Open Graph / Facebook / WhatsApp */}
    <meta property="og:type" content="website" />
    <meta property="og:url" content={fullUrl} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:secure_url" content={ogImageUrl} />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={`Vista previa de ${eventData.celebrant}`} />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="Invitación de Cumpleaños" />
    
    {/* Meta tags adicionales para WhatsApp */}
    <meta name="format-detection" content="telephone=no" />
    <meta name="theme-color" content="#ff9800" />
    
    {/* Meta tags adicionales para mejor compatibilidad */}
    <link rel="image_src" href={ogImageUrl} />
    
    {/* Twitter Card */}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={fullUrl} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={ogImageUrl} />
    <meta name="twitter:image:alt" content={`Vista previa de ${eventData.celebrant}`} />
    
    <FontLoader titleFont={eventData.fonts.title} textFont={eventData.fonts.text} />
    {videoConfig && (
      <script is:inline>
        // Cargar YouTube IFrame API si no está cargada
        if (!window.YT) {
          const tag = document.createElement("script");
          tag.src = "https://www.youtube.com/iframe_api";
          const firstScriptTag = document.getElementsByTagName("script")[0];
          if (firstScriptTag && firstScriptTag.parentNode) {
            firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);
          }
        }
      </script>
    )}
  </head>
  <body class={`theme-${eventData.slug}`}>
    {videoConfig ? (
      <>
        <div class="background-video-container">
          <iframe
            id={`yt-background-${videoConfig.youtubeId}`}
            class="background-video"
            src={youtubeUrl}
            frameborder="0"
            allow="autoplay; encrypted-media; accelerometer; gyroscope; picture-in-picture"
            allowfullscreen
            aria-hidden="true"
            loading="eager"
          ></iframe>
        </div>
        <VolumeButton client:load videoId={videoConfig.youtubeId} initialMuted={videoConfig.muted} />
      </>
    ) : (
      <div class="background-image" style={`background-image: url('${coverImagePath}');`}></div>
    )}
    <slot />
  </body>
</html>

<style>
  /* Mobile-first: Estilos base para móviles */
  body {
    position: relative;
    min-height: 100vh;
    overflow-x: hidden;
  }

  .background-video-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    overflow: hidden;
  }

  .background-video {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100vw;
    height: 100vh;
    transform: translate(-50%, -50%);
    min-width: 100%;
    min-height: 100%;
    object-fit: cover;
    pointer-events: none;
  }

  /* Asegurar que el video cubra toda la pantalla en diferentes aspect ratios */
  @media (min-aspect-ratio: 16/9) {
    .background-video {
      width: 100vw;
      height: 56.25vw; /* 16:9 aspect ratio */
    }
  }

  @media (max-aspect-ratio: 16/9) {
    .background-video {
      width: 177.78vh; /* 16:9 aspect ratio */
      height: 100vh;
    }
  }

  .background-image {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: scroll;
    z-index: -1;
  }
  
  /* Overlay semi-transparente para mejorar legibilidad del contenido */
  body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    /* background: rgba(255, 255, 255, 0.881); */
    z-index: -1;
  }
  
  /* Tablet y desktop: min-width 768px */
  @media (min-width: 768px) {
    .background-image {
      background-attachment: fixed; /* Efecto parallax en pantallas grandes */
    }
  }

  /* Botón de volumen */
  :global(.volume-button) {
    position: fixed;
    bottom: 1.5rem;
    right: 1.5rem;
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.9);
    border: 2px solid var(--primary, #ff9800);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 1000;
    transition: all 0.3s ease;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  :global(.volume-button:hover) {
    background: var(--primary, #ff9800);
    transform: scale(1.1);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
  }

  :global(.volume-button:hover .volume-icon) {
    color: white;
  }

  :global(.volume-icon) {
    width: 1.5rem;
    height: 1.5rem;
    color: var(--primary, #ff9800);
    transition: color 0.3s ease;
  }

  /* Tablet y desktop: ajustes del botón */
  @media (min-width: 768px) {
    :global(.volume-button) {
      width: 3.5rem;
      height: 3.5rem;
      bottom: 2rem;
      right: 2rem;
    }

    :global(.volume-icon) {
      width: 1.75rem;
      height: 1.75rem;
    }
  }
</style>
